{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015.promise",
      "es6"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES6",
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
		"esModuleInterop": true
  }
}
